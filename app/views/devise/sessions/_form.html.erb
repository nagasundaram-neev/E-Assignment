    <div class="container">

        <div class="flat-form">
            <ul class="tabs">
                <li>
                    <a href="#login" class="active">Login</a>
                </li>
                <li>
                    <a href="#register">Register</a>
                </li>
                <li>
                    <a href="#reset">Reset Password</a>
                </li>
            </ul>
            <div id="login" class="form-action show" style="align:center;">
                <h1 class="h1_content">Login to the App</h1>
                <p>
                    Login to account for assessing application.
                </p>
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                    <ul>
                        <li>
                          <%= f.email_field :email, :autofocus => true,:placeholder =>"E-Mail",:class=>"form-group form-control"  %>
                        </li>
                        
                        <li>
                          <%= f.password_field :password , :placeholder => "Password",:class=>"form-group form-control" %>
                        </li>

                        <li>
                            <input type="submit" value="Login" class="button login_class" />
                        </li>
                    </ul>
                <% end %>
            </div>
            <!--/#login.form-action-->
            <div id="register" class="form-action hide">
                <h1 class="h1_content">Register</h1>
                <p>
                    You should sign up .
                </p>
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                    <ul >  


                      <li>                    
                          <%= f.email_field :email, :autofocus => true, :placeholder=>"Email Id",:class=> "form-group form-control" %>                    
                          <%= f.text_field :phone_number,:placeholder=>"Phone Number" , :class => "form-group form-control" %>   
                          <%= f.text_field :first_name,:placeholder=>"First Name",:class=>"form-group form-control" %>
                        
                          <%= f.text_field :last_name,:placeholder=>"Last Name",:class=>"form-group form-control" %>
                 
                            <%= f.password_field :password, :placeholder=>"Password",:class=>"form-group form-control" %>
                          <%= f.password_field :password_confirmation, :placeholder=>"Confirm Password",:class=>"form-group form-control" %>

                      </li>
                        
                        <li>
                            <input type="submit" value="Sign Up" class="button registration_class"  />
                        </li>
                    </ul>
                <% end %>
                 <div id="Others_Signup" style="display:none">
                 <%= render :partial => 'devise/sessions/othersForm' %>
                </div>
                <button onclick="show()" class="btn btn-success">Register for another User ?</button>
               
            </div>
            <!--/#register.form-action-->
            <div id="reset" class="form-action hide">
                <h1 class="h1_content">Reset Password</h1>
                <p>
                    To reset your password enter your email and we'll send you a link to reset your password.
                </p>
                <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                    <ul>
                        <li>
                            <%= f.email_field :email, :autofocus => true,:placeholder=>"E-mail",class: "form-group form-control" %>
                        </li>
                        <li>
                            <input type="submit" value="Send" class="button login_class" />
                        </li>
                    </ul>
                <% end %>

            </div>
            <!--/#register.form-action-->

        </div>
    </div>

<script type="text/javascript">
function show()
{
var div=document.getElementById('Others_Signup');
div.style.display="block"
}
</script>


