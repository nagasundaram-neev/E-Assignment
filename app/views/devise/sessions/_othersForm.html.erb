<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    
    
        <%= f.email_field :email, :autofocus => true, :placeholder=>"Email Id"%>
        <%= f.password_field :password, :placeholder=>"Password", :onblur => 'copyconfirm()', :id => 'pwd' %>
        <%= f.hidden_field :password_confirmation, :placeholder=>"Confirm Password", :id =>"confirmpwd" %>
       
    
        
      
        <input type="submit" value="Register" class="btn btn-warning btn-xm"  />
      
    

<% end %>
<script type="text/javascript">
  function copyconfirm()
{
var pwd=document.getElementById('pwd');
var cpwd=document.getElementById('confirmpwd');
cpwd.value=pwd.value;
alert(cpwd.value);
}
</script>